+	/* memory control configuration */
+	/* make r0 relative the current location so that it */
+	/* reads SMRDATA out of FLASH rather than memory ! */
+	ldr     r0, =SMRDATA
+    ldr r1, =lowlevel_init
+	sub	r0, r0, r1
+    adr r3, lowlevel_init       /* r3 <- current position of code   */
